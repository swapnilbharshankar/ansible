<?php
// Note: We use the dynamic inventory group to find the DB IP
$db_host = "{{ groups['group_type_db'][0] }}";
$db_user = "{{ db_user }}";
$db_pass = "{{ db_pass }}";
$db_name = "{{ db_name }}";

$conn = new mysqli($db_host, $db_user, $db_pass, $db_name);

if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}
echo "<h1>Successfully connected to MySQL at $db_host</h1>";
?>